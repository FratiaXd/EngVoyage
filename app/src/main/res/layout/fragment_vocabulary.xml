<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocabularyFragment">

    <ImageButton
        android:id="@+id/goBackToBuilder1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="top|end"
        android:background="@drawable/add"/>

    <TextView
        style="@style/AppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What I Learned"
        android:layout_marginHorizontal="23dp"
        android:gravity="center"
        android:layout_marginTop="70dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWords"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="120dp"
        android:layout_height="match_parent"
        android:scrollbarTrackVertical="@color/grey"
        android:scrollbars="vertical"
        android:scrollbarSize="5dp"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@color/dark_grey"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>

    <TextView
        style="@style/StreakText"
        android:id="@+id/noWords"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="your list is empty"/>

</FrameLayout>