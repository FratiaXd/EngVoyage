<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/beige"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/courseBoxProgress"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_design_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseNameProgress"
                android:layout_marginStart="15dp"
                style="@style/CourseProgressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punctuations" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="35dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar"/>

            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/courseDurProgress"
                style="@style/CourseDurationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginEnd="35dp"
                android:text="1 hour" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:src="@drawable/right"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>