<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"/>

    <TextView
        style="@style/StreakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streak"
        android:layout_gravity="top|right"
        android:layout_marginRight="70dp"
        android:layout_marginTop="27dp"/>

    <TextView
        style="@style/GreetingText"
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="90dp"/>

    <TextView
        style="@style/HeadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore courses"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="115dp"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/course1"
                android:orientation="vertical"
                android:background="@drawable/box_design"
                android:layout_width="160dp"
                android:layout_height="165dp"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/coursePic1"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:src="@drawable/punctuations"/>

                <TextView
                    style="@style/CourseNameText"
                    android:id="@+id/courseName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Punctuations"/>

                <TextView
                    style="@style/CourseDurationText"
                    android:id="@+id/courseDur1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour"/>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</FrameLayout>