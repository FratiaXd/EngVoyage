<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordFragment">

    <ImageButton
        android:id="@+id/goBackToBuilder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="top|end"
        android:background="@drawable/add"/>

    <TextView
        style="@style/HeadingText"
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vocabulary Builder"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_marginTop="120dp"/>

    <TextView
        style="@style/GreetingText"
        android:id="@+id/wordMeaningShort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Pick difficulty level"
        android:gravity="center"
        android:layout_marginTop="180dp"/>

    <TextView
        style="@style/MyTextView"
        android:layout_marginTop="280dp"
        android:layout_marginStart="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronunciation"/>

    <TextView
        android:id="@+id/pronunciation"
        android:layout_marginTop="310dp"
        style="@style/CourseDescr"
        android:layout_marginHorizontal="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <TextView
        style="@style/MyTextView"
        android:layout_marginTop="370dp"
        android:layout_marginStart="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etymology"/>

    <TextView
        android:id="@+id/meaningFull"
        android:layout_marginTop="400dp"
        style="@style/CourseDescr"
        android:layout_marginHorizontal="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <TextView
        style="@style/MyTextView"
        android:layout_marginTop="510dp"
        android:layout_marginStart="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage"/>

    <TextView
        android:id="@+id/usage"
        android:layout_marginTop="540dp"
        style="@style/CourseDescr"
        android:layout_marginHorizontal="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_icon"
        android:background="@color/beige"
        android:layout_marginTop="282dp"
        android:layout_marginStart="155dp"/>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        android:id="@+id/wordsLearned"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/beige" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="100dp"
            style="@style/GreetingText"
            android:text="You learned all available words for this level."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/start_img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="50dp"
            style="@style/GreetingText"
            android:text="Wait for new updates."/>

    </LinearLayout>

    <android.widget.Button
        style="@style/WhiteText"
        android:id="@+id/saveWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="85dp"
        android:background="@drawable/round_btn_green"
        android:text="save word"/>

    <android.widget.Button
        style="@style/WhiteText"
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:visibility="invisible"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_btn_green"
        android:text="continue"/>

</FrameLayout>